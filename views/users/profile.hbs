<div class="row">
  <div class="col-md-6">
    <img
      class="card-img-top img-fluid"
      src="{{user.image}}"
      alt="Card image cap"
      width="286px"
      height="180px"
      style="transition: opacity 0.5s; opacity:0;"
      onload="this.style.opacity=1;"
    />
  </div>

  <div class="col-md-6">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <hr />
    <p>{{#if commentCount}}{{commentCount}}{{else}}0{{/if}}已評論餐廳</p>
    <p>{{#if user.FavoritedRestaurants}}{{user.FavoritedRestaurants.length}}
      {{else}}0{{/if}}收藏的餐廳</p>
    <p>followings(追蹤者)</p>
    <p>followers(追隨者)</p>
    <button type="button" class="btn btn-link">
      <a class="btn btn-link link-primary" href="/users/{{user.id}}/edit">
        Edit
      </a>
    </button>
    <a
      class="btn btn-outline-secondary"
      href="javascript:history.back()"
    >Back</a>
  </div>
</div>
    {{!-- profile content --}}
<div class="row mt-5">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        {{user.Followings.length}} followings(追蹤者)
      </div>
      <div class="card-body d-flex-inline">
        {{#if user.Followings}}
          {{#each user.Followings}}
            <a href="/users/{{this.id}}">
              <img src="{{this.image}}" alt="#" style="max-width: 5rem;" />
            </a>
          {{/each}}
        {{else}}
          <p>沒有追蹤任何人</p>
        {{/if}}
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        {{user.Followers.length}} followers(追隨者)
      </div>
      <div class="card-body d-flex-inline">
        {{#if user.Followers}}
          {{#each user.Followers}}
            <a href="/users/{{this.id}}">
              <img src="{{this.image}}" alt="#" style="max-width: 5rem;" />
            </a>
          {{/each}}
        {{else}}
          <p>沒有任何追隨者</p>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="col-md-8 card">
    <div class="card">
      <div class="card-header">
        {{commentCount}} 已評論餐廳
      </div>
      <div class="card-body d-flex-inline">
        {{#if commentCount}}
          {{#each commentedRests}}
            <a href="/restaurants/{{this.id}}">
              <img src="{{this.image}}" alt="#" style="max-width: 5rem;" />
            </a>
          {{/each}}
        {{else}}
          <p>尚未評論任何餐廳</p>
        {{/if}}
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        {{user.FavoritedRestaurants.length}} 已收藏餐廳
      </div>
      <div class="card-body d-flex-inline">
        {{#if user.FavoritedRestaurants}}
          {{#each user.FavoritedRestaurants}}
            <a href="/restaurants/{{this.id}}">
              <img src="{{this.image}}" alt="#" style="max-width: 5rem;" />
            </a>
          {{/each}}
        {{else}}
          <p>尚未收藏任何餐廳</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>